<section class="registration-section">
  <%= render "shared/header" %>
  <main class="form-container shadow">
    <h2 class="form-title">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field login">
        <%= f.label :email %>
        <%= f.email_field :email, required: true, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <%= f.password_field :password, required: true, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "shadow" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div>
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
    <% end %>

    <div class="flex-center-center next-actions-links">
      <%= render "devise/shared/links" %>
    </div>
  </main>
  <%= render "shared/footer" %>
</section>
